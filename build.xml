<?xml version="1.0" encoding="UTF-8"?>
<project default="jar">

	<property name="jarfile" value="joglstuff.jar" />

	<target name="jar">
		<jar destfile="dist/${jarfile}">
			<manifest>
				<attribute name="Main-Class" value="my.Main" />
			</manifest>
			<fileset dir="bin" />
			<!-- run mvn dependency:copy-dependencies first... -->
			<!-- need to explicitly list platform classifers though... -->
			<zipgroupfileset dir="target/dependency" includes="**/*.jar" />
		</jar>
	</target>

	<target name="deploy" depends="jar">
		<copy file="dist/${jarfile}" tofile="${user.home}/Dropbox/Public/${jarfile}" />
	</target>

</project>
